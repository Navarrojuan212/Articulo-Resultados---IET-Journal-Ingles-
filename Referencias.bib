   isbn = {9781728189642},
   issn = {15502252},
   booktitle = {IEEE Vehicular Technology Conference},
   keywords = {60 GHz,Coexistence,NR-U,WiGig},
   month = {4},
   publisher = {Institute of Electrical and Electronics Engineers Inc.},
   title = {On the Coexistence of WiGig and NR-U in 60 GHz Band},
   volume = {April},
   year = {2021},
}
@misc{Larsson2020,
   abstract = {E-band (70/80 GHz) backhaul links are nowadays available with multi-Gbps capacity. Unfortunately, the high attenuation due to rain is limiting the link lengths to about 2 km. One way to overcome this limitation is to set up the E-band link in some sort of carrier aggregation solution together with a conventional backhaul band, usually 18-23 GHz to guarantee availability of critical data transfer also during heavy rain. This study compares long term logging of 7 km-long parallel backhaul links with carrier frequency 18.6/19.6 GHz and 71.6/81.6 GHz. This summary includes a comparison with ITU recommendations and a discussion on which phenomena, more than precipitation, is influencing the availability of these links.},
   author = {Christina Larsson and Lei Bao},
   doi = {10.23919/EuCAP48036.2020.9135791},
   keywords = {Index Terms-Line-of-sight propagation,fixed service,measurements,rain attenuation},
   title = {Availability of 7 km-long parallel 18 GHz band and E-band links for multi band solutions},
   year = {2020},
}
@article{Liu2021,
   abstract = {A low-voltage and high linear power $\{E\}$ -band traveling-wave tube amplifier is designed to meet the demand of high-data-rate wireless communication. The integrated design, including the dispersion combination of folded waveguide slow wave structure, broadband diamond pillbox window, and AlN-SiC lumped attenuator, ensures the success of the prototype tube with satisfying performance. The test results show that the amplifier is capable of providing more than 45.2 W output power, 38.8 dB saturated gain, 14.3\% total efficiency, and 45.6 dB small-signal gain in 71-76 GHz band with a low voltage of 12.88 kV and a current of 80 mA. The 1 dB compression point exceeding 20 W verifies the feasibility of dispersion combination technology for high linear power design.},
   author = {Shishuo Liu and Qingmei Xie and Zhaofei Chen and Yujuan Wu and Zhangxiong Zi and Xianping Wu and Jun Cai and Jinjun Feng},
   doi = {10.1109/TED.2021.3073382},
