   keywords = {CD compensation,CFO compensation,Index Terms-Filterbank multicarrier,PN estimation,coherent detection,long-haul communications,offset-QAM},
   pages = {4340-4348},
   title = {Phase Noise Compensation in Optical FBMC/OQAM Communication Systems},
   volume = {37},
   url = {https://hal.science/hal-02268492v1},
